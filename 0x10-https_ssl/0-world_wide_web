#!/bin/bash
# this code will print DNS info

digServer (){
	if [ -z "$1" ]; then
		echo "no parameter provided. closing..."
		exit 1
	fi

	ans=$(dig www.google.com | grep -A1 "ANSWER SECTION" | tail -n 1)
	echo "$ans"
	return 0
}

# echo "Number of params provided is $#"
if [ $# -lt 1 ]; then
	echo "$0 Usage:
		- domain_name {optional:subdomain}"
	exit 1
fi

if [ $# -gt 1 ]; then
	digServer "$2"."$1"
fi

if [ $# -eq 1 ]; then
	digServer www."$1"
	digServer lb-01."$1"
	digServer web-01."$1"
	digServer web-02."$1"
fi